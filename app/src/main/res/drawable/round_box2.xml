<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- fill/color -->

    <stroke
        android:width="@dimen/_3sdp"
        android:color="#03A9F4"
        ></stroke>

    <!-- Control the width and height of the shape -->
    <size
        android:width="200dp"
        android:height="70dp"/>

    <!-- Control the radius of each corners -->
    <corners
        android:bottomRightRadius="@dimen/_15sdp"
        android:bottomLeftRadius="@dimen/_15sdp"
        android:topLeftRadius="@dimen/_15sdp"
        android:topRightRadius="@dimen/_15sdp"
        />
</shape>