<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:padding="@dimen/_10sdp"
            app:tint="@color/specialgreen"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Complain"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/specialgreen"
            android:gravity="center"/>


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/_45sdp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/specialgreen"
                android:textSize="@dimen/_12sdp"
                android:text="Name and DOB"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borderimage"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="@dimen/_15sdp"
                    android:backgroundTint="@color/white"
                    android:hint="Patient's name"
                    android:maxLength="40"
                    android:textSize="@dimen/_10sdp"
                    android:maxLines="1"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textColorHint="#4F000000"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:background="@color/specialgreen"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/dateofbirth"
                    android:layout_height="match_parent"
                    android:drawableEnd="@drawable/ic_baseline_calendar_month_24"
                    android:drawableTint="@color/specialgreen"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:hint="Date of Birth"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp"
                    android:maxLines="1"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_centerInParent="true"
                    android:inputType="date"
                    android:maxLength="40"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:textColorHint="#4F000000"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />




            </LinearLayout>



        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/specialgreen"
                android:textSize="@dimen/_12sdp"
                android:text="Query details"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/borderimage"
                android:layout_marginVertical="@dimen/_10sdp"

                android:layout_marginHorizontal="@dimen/_15sdp"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="@dimen/_15sdp"
                    android:backgroundTint="@color/white"
                    android:hint="Hopital name"
                    android:maxLength="40"
                    android:textSize="@dimen/_10sdp"
                    android:maxLines="1"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textColorHint="#4F000000"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:background="@color/specialgreen"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="@dimen/_15sdp"
                    android:backgroundTint="@color/white"
                    android:hint="Medical or Pathology name"
                    android:maxLength="40"
                    android:textSize="@dimen/_10sdp"
                    android:maxLines="1"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textColorHint="#4F000000"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:background="@color/specialgreen"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/dateofdouments"
                    android:layout_height="match_parent"
                    android:drawableEnd="@drawable/ic_baseline_calendar_month_24"
                    android:drawableTint="@color/specialgreen"
                    android:paddingVertical="@dimen/_15sdp"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:backgroundTint="@color/white"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    android:hint="Date"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:layout_centerInParent="true"
                    android:inputType="date"
                    android:maxLength="40"
                    android:textColorHint="#4F000000"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />

                <View
                    android:layout_width="match_parent"
                    android:background="@color/specialgreen"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/amount1"
                        android:layout_height="match_parent"
                        android:background="#EAE2FF"
                        android:textColor="@color/black"
                        android:hint="Charged Amount"
                        android:paddingLeft="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        android:maxLength="40"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:textColorHint="#5B000000"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/amount2"
                        android:background="#ECFADC"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/_12sdp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:hint="Original Amount"
                        android:paddingVertical="@dimen/_15sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:layout_centerInParent="true"
                        android:inputType="numberDecimal"
                        android:maxLength="40"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:textColorHint="#6F000000"
                        />
                </LinearLayout>



            </LinearLayout>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/specialgreen"
                android:textSize="@dimen/_12sdp"
                android:text="Aadhar details"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borderimage"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="@dimen/_10sdp"
                android:backgroundTint="@color/white"
                android:hint="0000 0000 0000 0000 (AADHAR NO.)"
                android:maxLength="40"
                android:textSize="@dimen/_13sdp"
                android:maxLines="1"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textColorHint="#4F000000"
                android:textStyle="bold" />



        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/specialgreen"
                android:textSize="@dimen/_12sdp"
                android:text="upload documents"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/borderimage"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_10sdp"
                android:backgroundTint="#69F0AE"
                app:cardElevation="@dimen/_2sdp"
                app:cardCornerRadius="@dimen/_30sdp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/upload"
                    android:padding="@dimen/_30sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AADHAR CARD PDF"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:textColor="@color/specialgreen"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:backgroundTint="#40C4FF"
                app:cardElevation="@dimen/_2sdp"
                app:cardCornerRadius="@dimen/_30sdp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/upload"
                    android:padding="@dimen/_30sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AADHAR CARD PDF"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:textColor="@color/specialgreen"/>
            </androidx.cardview.widget.CardView>





        </LinearLayout>








            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:textSize="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:checked="false"
                android:textColor="@color/light_blue_900"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="I Agree that all the Details entered are correct and valid"/>

        </LinearLayout>



    </ScrollView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:text="Submit"
        android:background="@color/specialgreen"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:paddingVertical="@dimen/_10sdp"></TextView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>